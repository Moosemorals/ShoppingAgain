@using  ShoppingAgain.Models
@model ShoppingList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ShoppingList current = Model;
    ViewData["Title"] = "Changing the name of " + current.Name;
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => current.ID)
    <dl>
        <dt>@Html.LabelFor(x => current.Name)</dt>
        <dd>
            @Html.EditorFor(x => current.Name)
            @Html.ValidationMessageFor(x => current.Name)
        </dd>
    </dl>

    <div class="ok-cancel">
        <a asp-route="@Names.ListDetails" asp-route-listId="@current.ID" asp-fragment="@Names.ItemsHash">Cancel</a>
        <button type="submit">Save Changes</button>
    </div>
}
