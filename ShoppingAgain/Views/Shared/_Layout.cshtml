@using ShoppingAgain.Classes
@{
    Layout = null;

    string _title = string.IsNullOrEmpty(ViewBag.title) ? "Shopping" : "Shopping: " + ViewBag.title;
}
<!DOCTYPE html>

<html lang="en-gb">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@_title</title>
    <link rel="icon" type="image/svg" href="~/images/icon.svg">
</head>
<body>
    <nav id="main-controls">
        @RenderSection("controls", false)
    </nav>

    <h1>@_title</h1>

    @if (TempData.ContainsKey(StaticNames.Message))
    {
        <div>
            @TempData[StaticNames.Message]
        </div>
    }


    <article>
        @RenderBody()
    </article>

    @RenderSection("scripts", false)
</body>
</html>
